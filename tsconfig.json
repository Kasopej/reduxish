{
    "exclude": [
        "node_modules",
        "./frontend",
        "./dist",
        "src/tests"
    ],
    "include": [
            "src/**/*.ts",
            "src/**/*.d.ts"
    ],
    "compilerOptions": {
        "outDir": "dist",
        "lib": [
            "ES2015"
        ],
        "module": "ESNext",
        "moduleResolution": "node10",
        "esModuleInterop": true,
        "strict": true,
        "checkJs": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "rootDir": "src",
        "stripInternal": true,
        "declaration": true,
    }
}